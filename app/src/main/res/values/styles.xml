<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_white_title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="search_click">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/stone_yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="home_rv_class_name">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/stone_yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="search_bar">
        <item name="android:background">@drawable/rounded_corners_search</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search_24</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_info_name_bold">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="overview_info">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="overview_info_bold">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
